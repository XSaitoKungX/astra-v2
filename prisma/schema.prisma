// â”€â”€â”€ Verification Attempts â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
model VerificationAttempt {
  id          Int      @id @default(autoincrement())
  guildId     String
  userId      String
  riskScore   Int      @default(0)
  stage       Int      @default(1)    // which stage they're on
  status      String   @default("pending") // pending, passed, failed, expired, kicked
  method      String   @default("button")  // button, captcha, age_gate
  attempts    Int      @default(0)    // captcha attempt count
  ip          String?  // optional: for advanced tracking
  metadata    String?  @db.Text // JSON: extra info (captcha answer, etc.)
  startedAt   DateTime @default(now())
  completedAt DateTime?

  settings SecuritySettings @relation(fields: [guildId], references: [id], onDelete: Cascade)

  @@index([guildId])
  @@index([guildId, userId])
  @@index([guildId, status])
  @@index([startedAt])
  @@map("verification_attempts")
}

// â”€â”€â”€ Raid Events â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
model RaidEvent {
  id          Int      @id @default(autoincrement())
  guildId     String
  level       Int      @default(1)    // raid level 1â€“3
  joinCount   Int      @default(0)    // joins that triggered this
  action      String   // lockdown, verify_all, quarantine_all
  triggeredBy String   @default("auto") // "auto" or user ID
  resolvedBy  String?  // user ID who resolved, or "auto"
  resolvedAt  DateTime?
  userIds     String   @default("[]") // JSON array of user IDs involved
  startedAt   DateTime @default(now())

  settings SecuritySettings @relation(fields: [guildId], references: [id], onDelete: Cascade)

  @@index([guildId])
  @@index([guildId, startedAt])
  @@map("raid_events")
}

// â”€â”€â”€ Bot Votes (Top.gg, DBL, etc.) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
model BotVote {
  id        Int      @id @default(autoincrement())
  userId    String
  platform  String   // topgg, dbl, discords
  type      String   @default("upvote") // upvote, test
  isWeekend Boolean  @default(false)
  query     String?  // optional query string from webhook
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([platform])
  @@index([createdAt])
  @@map("bot_votes")
}

// â”€â”€â”€ Social Feed Subscriptions (per-guild Twitch/YouTube/Twitter notifications) â”€â”€
model SocialFeed {
  id          Int      @id @default(autoincrement())
  guildId     String
  platform    String   // twitch, youtube, twitter
  platformId  String   // Twitch username, YouTube channel ID, Twitter handle
  channelId   String   // Discord channel to post notifications
  roleId      String?  // Optional role to ping
  message     String?  @db.Text // Custom notification message template
  enabled     Boolean  @default(true)
  lastCheckId String?  // Last known stream/video/tweet ID to avoid duplicates
  lastCheckAt DateTime? // When we last checked
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([guildId, platform, platformId])
  @@index([guildId])
  @@index([platform, enabled])
  @@map("social_feeds")
}

// â”€â”€â”€ Notification Settings (per-guild email/push config) â”€â”€â”€â”€â”€â”€â”€â”€â”€
model NotificationSettings {
  id              String  @id // Guild ID
  // Push notifications (VAPID)
  pushEnabled     Boolean @default(false)
  pushEndpoint    String? @db.Text
  pushP256dh      String?
  pushAuth        String?
  // Email notifications (SMTP)
  emailEnabled    Boolean @default(false)
  emailAddress    String?
  emailOnJoin     Boolean @default(false)
  emailOnLeave    Boolean @default(false)
  emailOnBan      Boolean @default(false)
  emailOnReport   Boolean @default(false)
  emailDigest     Boolean @default(false) // daily digest
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("notification_settings")
}

