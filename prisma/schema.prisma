  lockdownActive      Boolean @default(false)
  lockdownBy          String? // user ID who triggered lockdown
  lockdownAt          DateTime?
  lockdownReason      String?

  // â”€â”€ Alt Detection â”€â”€
  altDetection        Boolean @default(false)
  altMinAge           Int     @default(7)    // days â€” accounts younger get flagged
  altAction           String  @default("flag") // "flag", "quarantine", "kick", "ban"

  // â”€â”€ Suspicious Patterns â”€â”€
  suspiciousPatterns  String  @default("[]") // JSON array of regex patterns for usernames

  // â”€â”€ Relations â”€â”€
  verifyAttempts VerificationAttempt[]
