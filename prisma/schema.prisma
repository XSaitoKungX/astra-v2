  riskThresholdMed    Int     @default(60)   // lowâ€“med = require verification
  riskThresholdHigh   Int     @default(80)   // medâ€“high = quarantine, high+ = auto-kick
  riskNoAvatar        Int     @default(15)   // score added if no avatar
  riskNewAccount      Int     @default(25)   // score added if account < 7 days
  riskSuspiciousName  Int     @default(10)   // score added for suspicious username patterns
  riskAutoAction      String  @default("kick") // action for score > high threshold: "kick", "ban", "quarantine"

  // â”€â”€ Quarantine â”€â”€
  quarantineEnabled   Boolean @default(false)
  quarantineRole      String? // role that restricts all access
  quarantineChannel   String? // channel quarantined users can see
  quarantineAutoKick  Int     @default(0)    // auto-kick after X hours (0 = disabled)

  // â”€â”€ Anti-Raid â”€â”€
  antiRaidEnabled     Boolean @default(false)
  antiRaidThreshold   Int     @default(10)   // joins per interval to trigger
  antiRaidInterval    Int     @default(10)   // seconds
  antiRaidAction      String  @default("lockdown") // "lockdown", "verify_all", "quarantine_all"
  antiRaidCooldown    Int     @default(300)  // seconds before auto-recovery
  antiRaidDmAlert     Boolean @default(true) // DM server owner on raid
  antiRaidAlertChannel String? // channel for raid alerts
  antiRaidLevel       Int     @default(0)    // current raid level (0 = none, 1â€“3)

