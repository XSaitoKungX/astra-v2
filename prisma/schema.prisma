model SecuritySettings {
  id              String  @id // Guild ID

  // â”€â”€ Master toggle â”€â”€
  enabled         Boolean @default(false)

  // â”€â”€ Verification â”€â”€
  verifyEnabled       Boolean @default(false)
  verifyChannel       String? // channel where verify panel lives
  verifyRole          String  @default("[]") // JSON array of role IDs granted after verification
  verifyRemoveRole    String? // optional: role removed after verification (e.g. "Unverified")
  verifyLogChannel    String? // channel for verification logs
  verifyStages        Int     @default(1)    // 1 = button only, 2 = button + captcha, 3 = button + captcha + age gate
  verifyMinAge        Int     @default(7)    // min account age in days (for stage 3)
  verifyTimeout       Int     @default(300)  // seconds before verification attempt expires
  verifyPanelTitle      String  @default("Verification Required")
  verifyPanelDesc       String? @db.Text
  verifyPanelColor      String  @default("#7C3AED")
  verifyPanelImage      String? // banner image URL
  verifyPanelFooter     String?
  verifyPanelFooterIcon String?
  verifyPanelTimestamp  Boolean @default(false)
  verifyPanelThumbnail  Boolean @default(true)
  verifyPanelThumbnailUrl String?
  verifyPanelAuthorName String?
  verifyPanelAuthorIcon String?
  verifyPanelAuthorUrl  String?
  verifyMode            String  @default("link")  // "link" = web verify page, "discord" = in-Discord captcha modal
  verifyDmOnFail      Boolean @default(true) // DM user if verification fails
  verifyKickOnFail    Boolean @default(false) // kick user if they fail all attempts
  verifyMaxAttempts   Int     @default(3)    // max captcha attempts before fail

